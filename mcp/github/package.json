{
  "name": "@zenotika/mcp-github",
  "version": "0.1.0",
  "description": "Model Context Protocol server that exposes GitHub data using PAT or OAuth authentication.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zenotika-mcp-github": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@octokit/auth-oauth-device": "^7.1.1",
    "octokit": "^4.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
}
